<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#107DBB">

    <ImageView
        android:id="@+id/log"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/main_img_log"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textMenu"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Авторизуйтесь"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/nameTextColor"/>
    <EditText
        android:id="@+id/login_et"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textColor="#000"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMenu"
        android:background="#FFF"
        android:hint="@string/login"/>
    <EditText
        android:id="@+id/password_et"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textColor="#000"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_et"
        android:background="#FFF"
        android:hint="@string/pass"/>
    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_et"
        android:orientation="horizontal">
        <Button
            android:id="@+id/authBtn"
            android:textSize="11sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/authText"
            android:background="@drawable/btn_draw"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/regBtn"
            android:textSize="11sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/regText"
            android:background="@drawable/btn_draw"
            android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>