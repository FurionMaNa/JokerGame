<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector >
            <item
                android:state_pressed="false"
                android:state_focused="false">
                <shape
                    android:shape="rectangle">
                    <corners android:radius="10dip" />
                    <gradient
                        android:type="linear"
                        android:angle="-90"
                        android:startColor="#FD4E4E"
                        android:endColor="#CF4D4D" />
                </shape>
            </item>

            <item
                android:state_pressed="false"
                android:state_focused="true">
                <shape
                    android:shape="rectangle" >
                    <corners android:radius="10dip" />
                    <gradient
                        android:type="linear"
                        android:angle="-90"
                        android:startColor="#9C3030"
                        android:endColor="#681414" />
                </shape>
            </item>

            <item
                android:state_pressed="true"
                android:state_focused="false">
                <shape
                    android:shape="rectangle" >
                    <corners android:radius="10dip" />
                    <gradient
                        android:type="linear"
                        android:angle="-90"
                        android:startColor="#9C3030"
                        android:endColor="#681414" />
                </shape>
            </item>
        </selector>
    </item>

</layer-list>